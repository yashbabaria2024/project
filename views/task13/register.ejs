                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="firstName" id="firstname">First Name</label>
                                        <input type="text" class="form-control" name="firstname" class="form-control empty-validation" id="id_firstname" placeholder="Enter First Name"/>
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="lastName">Last Name</label>
                                        <input type="text" class="form-control" name="lastname" id="id_lastname" class="form-control empty-validation" placeholder="Enter Last Name" />
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="dateofbirth">dateofbirth</label>
                                        <input type="text" name="dateofbirth" class="form-control" id="id_dateofbirth" placeholder="ex:yyyy-mm-dd" />
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3 d-flex align-items-center cs-mt-4">
                                        <Label class=" inline-block" for="gender">Gender</Label>
                                        <div class="mx-2">
                                        <input type="radio" class="form-check-input" name="gender" id="id_male" value="male"
                                                    checked /><label for="id_male">Male</label>
                                                <input type="radio" class="form-check-input" name="gender" id="id_female" value="female"/><label
                                                    for="id_female">Female</label>
                                                </div>
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="designation">Designation</label>
                                        <input type="text" class="form-control empty-validation" name="desg" id="id_designation"
                                                    placeholder="Enter Designation">
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="address1">Address1</label>
                                      <input type="text" name="address" id="id_address" class="form-control empty-validation"
                                                placeholder="Enter Address1"/>
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="email">Email</label>
                                        <input type="text" name="email" id="id_email" class="form-control" placeholder="Enter Email">
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="address2">Address2</label>
                                        <input type="text" name="address2" id="id_address2" class="form-control empty-validation"
                                        placeholder="Enter Address2"/>
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="contact">Contact</label>
                                        <input type="text" name="contact" id="id_contact" class="form-control" placeholder="contact">
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="city">City</label>
                                        <input type="text" class="form-control empty-validation" placeholder="Enter City" name="city"
                                        id="id_city">
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="relationshipstatus">Relationship Status</label>
                                        <select class="form-select" name="relationshipstatus" id="id_relationshipstatus">
                                            <option value="select" hidden>Select</option>
                                            <option value="single">Single</option>
                                            <option value="marital">Marital</option>
                                        </select></td>
                                    
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                     
                                        <label class="mb-2" for="zipcode">Zipcode</label>
                                        <input type="text" class="form-control empty-validation" name="zipcode" id="id_zipcode"
                                                placeholder="Enter Zipcode">
                                    </div>
                                </div>
                                <div class="col-6 px-2">
                                    <div class="form-cc mb-3">
                                        <label class="mb-2" for="state">State</label>
                                        <select class="form-select" name="state" id="id_state">
                                            <option value="select" hidden>Select</option>
                                            <option value="Gujarat">Gujarat</option>
                                            <option value="Maharashtra">Maharashtra</option>
                                            <option value="Assam">Assam</option>
                                            <option value="Goa">Goa</option>
                                            <option value="Chattisgrah">Chattisgrah</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 px-2">
                                    <input type="submit" class="btn btn-primary"  name="submit" id="submit" value="Register" >
                                </div>
                               
                            
                            </div>
                            
                          
                      
                    </form>
                    </div>
                   
                   
                <div class="col-3"></div>
                </div>
                
       
    </div>
